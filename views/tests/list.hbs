<html>
    <body>
        My Games List:
        <div>
            Hello, {{user.username}}
        </div>
        <br>
        {{#each user.gameList}}
            <div>   {{this.game.name}}</div>
            <div>   {{this.status}}</div>
        <br>
        {{/each}}
        Add List
        <form method="Post" action="addList">
            <input input="text" name="game" placeholder="game">
            <input input="text" name="status" placeholder="status">
            <input type="submit" value="submit">
        </form>
        <br><br>
        Delete game from personal list<br>
        <form method="POST" action="deleteGame">
            name:<input type="text" name="gameName">
            <input type="submit" value="submit">
        </form>
        Update Status<br>
        <form method="POST" action="updateStatus">
            name:<input type="text" name="gameName">
            status:<input type="text" name="status">
            <input type="submit" value="submit">
        </form>
    </body>
</html>